
.cardSwiper {
  height: 420rpx !important;

  display: block;
  /* border:1px red solid; */
}

swiper-item {
  width: 610rpx !important;
  left: 70rpx;
  box-sizing: border-box;
  padding: 40rpx 0rpx 70rpx;
 
}

.swiper-view {
  width: 100%;
  display: block;
  height: 100%;
  border-radius: 10rpx;
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
  overflow: hidden;

}

swiper-item.cur .swiper-view {
  transform: none;
  transition: all 0.2s ease-in 0s;
}

.swiper-view image {
  display: block;
  width: 100%;
  height: 100%;
  margin: 0;
  border-radius: 10rpx;
  pointer-events: none;
}