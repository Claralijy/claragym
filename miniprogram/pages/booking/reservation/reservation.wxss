/* pages/reservation/reservation.wxss */

/* 滚动日历 */
.scroll-view {
  height: 200rpx;
  background-color: white;
  width: 100%;
  white-space: nowrap;
}
.item {
  height: 200rpx;
  display: inline-block;
}
.text-view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  color: #000;
}
.month {
  font-size: 30rpx;
  margin-top: 10rpx;
}
.week {
  font-size: 32rpx;
  margin-top: 10rpx;
}
.day {
  font-size: 32rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
}
/* 日期选中的样式 */
.day-active {
  background-color: #FFB400;
  color: #fff;
}

/* 教练信息 */
.cont{
  background-color: #fff;
  /* display: flex;
  flex-direction:column ; */
  padding: 30rpx;
  margin-top: 20rpx; 
  font-size: 26rpx;
  /* box-sizing: border-box; */
  box-shadow: 4rpx 4rpx 12rpx #ddd;
}
.content-box{
  position: relative;
}
.content-box .title{
  font-weight: 700;
  margin-bottom: 10rpx;
}
.content-box .type{
  position: absolute;
  background-color: #98ca23;
  color: #fff;
  text-align: center;
  vertical-align: middle;
  border-bottom-left-radius: 15rpx;
  width: 90rpx;
  height: 40rpx;
  top: -30rpx;
  right:-30rpx;
}
.cont .tag{
  margin-left: 10rpx;
}
.coach-name{
  margin: 15rpx auto;
}
.action{
  color: #f39529da;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}