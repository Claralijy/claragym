<!--pages/marketing/shopDetail/shopDetail.wxml-->
<view>
  <view>
    <image src="{{shop.image}}"></image>
  </view>
  <view>
      <view>{{shop.title}}</view>
      <view>￥{{shop.price}}</view>
      <view>{{shop.content}}</view>
  </view>


     <!-- 底部购物车 -->
     <view class="cart">
        <text class="total">购物车：{{cartTotal}}件</text>
        <text class="total">总价：￥{{cartTotalPrice}}</text>
        <button  bindtap="gotoCart" >加入购物车</button>
    </view>
</view>
