.cart{
    height: 10vh;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
	position: fixed;
	left: 0;
	right: 0; 
	bottom: 0;
    padding: 50rpx;
    background: blanchedalmond;
    /* color: #e7e7e7; */
    /* background: #e7e7e7; */
}
.cart .total{
    margin-right: 25rpx;
}
.cart button{
    color: #fff;
    margin-right: 80rpx;
    background-color:#98ca23;
}
