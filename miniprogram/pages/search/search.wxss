/* pages/search/search.wxss */
.search_container{
  width: 100%;
  height: 100vh;
  background-color: #eee;
}
.search_content{
  height: 230rpx;
  border: 1px #ccc solid;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search_content_img{
  height: 180rpx;
  width: 180rpx;
  border-radius: 5%;
  float: left;
  margin: 10rpx;
}
.search_content_right{
  float: left;
  width: 68%;
  font-size: 30rpx;
  margin: 15rpx;
}
.right_title{
  font-weight: 700;
  
}
.right_cont{
  font-size: 24rpx;
  margin-top: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break:break-all;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:3;  /* 显示的行数 */
}